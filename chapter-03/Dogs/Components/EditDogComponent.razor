@using chapter_03.Dogs.Models

<form hx-disabled-elt="#submit-btn"
      hx-put="/dogs/@Dog.Id"
      hx-on::after-request="if(event.detail.successful) this.reset()">
    <div>
        <label for="name">Name</label>
        <input id="name"
               name="name"
               required
               size="30"
               type="text"
               value="@Dog.Name" />
    </div>
    <div>
        <label for="breed">Breed</label>
        <input id="breed"
               name="breed"
               required
               size="30"
               type="text"
               value="@Dog.Breed" />
    </div>
    <div class="buttons">
        <button id="submit-btn">Update</button>
        <button hx-put="/dogs/@Dog.Id/deselect" hx-swap="none">Cancel</button>
    </div>
</form>

@code
{
    [Parameter]
    public required Dog Dog { get; set; }
}