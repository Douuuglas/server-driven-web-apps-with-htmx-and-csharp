@using chapter_03.Dogs.Models

<form hx-disabled-elt="#submit-btn"
      hx-post="/dogs"
      hx-target="tbody"
      hx-swap="afterbegin"
      hx-on::after-request="if(event.detail.successful) this.reset()">
    <div>
        <label for="name">Name</label>
        <input id="name"
               name="name"
               required
               size="30"
               type="text" />
    </div>
    <div>
        <label for="breed">Breed</label>
        <input id="breed"
               name="breed"
               required
               size="30"
               type="text" />
    </div>
    <div class="buttons">
        <button id="submit-btn">Add</button>
    </div>
</form>